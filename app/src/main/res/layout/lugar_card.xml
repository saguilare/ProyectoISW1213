<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="366dp"
        android:layout_height="366dp">

        <ImageView
            android:id="@+id/fotoCard"
            android:layout_width="100dp"
            android:layout_height="134dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/lugarCard"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/gpsCard"
            android:layout_width="209dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/ubicacionCard"
            android:layout_marginTop="127dp"
            android:text="GPS:" />

        <TextView
            android:id="@+id/ubicacionCard"
            android:layout_width="209dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/tipoCard"
            android:layout_marginTop="97dp"
            android:text="Ubicacion:" />

        <TextView
            android:id="@+id/tipoCard"
            android:layout_width="209dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/lugarCard"
            android:layout_marginTop="64dp"
            android:text="Tipo::" />

        <TextView
            android:id="@+id/lugarCard"
            android:layout_width="209dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="29dp"
            android:layout_marginTop="34dp"
            android:text="Lugar:" />

        <EditText
            android:id="@+id/comentarioCard"
            android:layout_width="match_parent"
            android:layout_height="67dp"

            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="90dp"
            android:ems="10"
            android:focusable="false"
            android:inputType="textMultiLine" />

        <RatingBar
            android:id="@+id/ratingCard"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="11dp"
            android:clickable="true"
            android:isIndicator="true"
            android:numStars="5" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/comentarioCard"
            android:layout_alignParentStart="true"
            android:text="Comentarios" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/comentarioCard"
            android:layout_marginTop="-90dp"
            android:text="Calificacion" />


    </RelativeLayout>
</android.support.v7.widget.CardView>